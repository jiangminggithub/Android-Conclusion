<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <Button
        android:id="@+id/btn_Component_ActivityDemo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/my_button_style"
        android:text="Activity" />

    <Button
        android:id="@+id/btn_Component_ServiceDemo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/my_button_style"
        android:text="Service" />

    <Button
        android:id="@+id/btn_Component_BroadcastReceiverDemo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/my_button_style"
        android:text="BroadcastReceiver" />

    <Button
        android:id="@+id/btn_Component_ContentProviderDemo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/my_button_style"
        android:text="ContentProvider" />

</LinearLayout>