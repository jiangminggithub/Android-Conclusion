<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    <ImageView 
        android:id="@+id/iv_containers_listview_ico"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:src="@drawable/containers_tabhostdemo_imgitem1"/>
    <TextView 
        android:id="@+id/tv_containers_listview_name"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_toRightOf="@id/iv_containers_listview_ico"
        android:gravity="center"
        android:layout_marginLeft="5dp"
        android:textStyle="bold"
        android:textSize="22sp"
        android:text="张三"/>
    <TextView 
        android:id="@+id/tv_containers_listview_phonenumber"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_toRightOf="@id/tv_containers_listview_name"
        android:gravity="center"
        android:layout_marginLeft="5dp"
        android:textSize="22sp"
        android:textColor="#ff2299"
        android:text="18855668765"/>
    <ImageView 
        android:id="@+id/ib_containers_listview_message"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        
        android:src="@drawable/containers_tabhostdemo_imgitem3"/>
    <ImageView 
        android:id="@+id/ib_containers_listview_phone"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:onClick="CallPhone"
        android:layout_toLeftOf="@id/ib_containers_listview_message"
        android:src="@drawable/containers_tabhostdemo_imgitem2"/>
    

</RelativeLayout>
