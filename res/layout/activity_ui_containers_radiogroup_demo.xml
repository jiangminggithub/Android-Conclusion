<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="选择性别："
            android:textSize="20sp"
            android:textStyle="bold" />

        <RadioGroup
            android:id="@+id/rg_containers_num1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/rb_containers_num1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:checked="true"
                android:text="男" />

            <RadioButton
                android:id="@+id/rb_containers_num2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="女" />
        </RadioGroup>
    </LinearLayout>

    <!-- 自定义RadioButton样式  -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="请选择："
            android:textSize="20sp"
            android:textStyle="bold" />

        <RadioGroup
            android:id="@+id/rg_containers_num2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/rb_containers_num3"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/containers_radiogroupdemo_bgselect"
                android:button="@null"
                android:checked="true"
                android:gravity="center"
                android:text="Android"
                android:textColor="@drawable/containers_rb_textcolor"
                android:textSize="14sp" />

            <RadioButton
                android:id="@+id/rb_containers_num4"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/containers_radiogroupdemo_bgselect"
                android:button="@null"
                android:gravity="center"
                android:text="JAVA"
                android:textColor="@drawable/containers_rb_textcolor"
                android:textSize="14sp" />

            <RadioButton
                android:id="@+id/rb_containers_num5"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/containers_radiogroupdemo_bgselect"
                android:button="@null"
                android:gravity="center"
                android:text="HTML"
                android:textColor="@drawable/containers_rb_textcolor"
                android:textSize="14sp" />
        </RadioGroup>
       
    </LinearLayout>

     <TextView
         android:id="@+id/tv_containers_select"
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:gravity="center"
         android:textSize="25sp" />

</LinearLayout>