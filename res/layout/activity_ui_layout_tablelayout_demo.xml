<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="TableLayout布局(3×3)："
        android:textColor="#ffaa00"
        android:textSize="20sp" />

    <TableRow>

        <TextView
            android:layout_weight="1"
            android:gravity="center"
            android:text="(1,1)" />

        <TextView
            android:layout_weight="1"
            android:gravity="center"
            android:text="(1,2)" />

        <TextView
            android:layout_weight="1"
            android:gravity="center"
            android:text="(1,3)" />
    </TableRow>

    <TableRow>

        <TextView
            android:layout_weight="1"
            android:gravity="center"
            android:text="(2,1)" />

        <TextView
            android:layout_weight="1"
            android:gravity="center"
            android:text="(2,2)" />

        <TextView
            android:layout_weight="1"
            android:gravity="center"
            android:text="(2,3)" />
    </TableRow>

    <TableRow>

        <TextView
            android:layout_weight="1"
            android:gravity="center"
            android:text="(3,1)" />

        <TextView
            android:layout_weight="1"
            android:gravity="center"
            android:text="(3,2)" />

        <TextView
            android:layout_weight="1"
            android:gravity="center"
            android:text="(3,3)" />
    </TableRow>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="TableLayout布局(计算器)："
        android:textColor="#ffaa00"
        android:textSize="20sp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:gravity="right"
        android:height="40dp"
        android:hint="0"
        android:textSize="20sp" />

    <TableRow>

        <Button
            android:layout_weight="1"
            android:gravity="center"
            android:text="1" />

        <Button
            android:layout_weight="1"
            android:gravity="center"
            android:text="2" />

        <Button
            android:layout_weight="1"
            android:gravity="center"
            android:text="3" />

        <Button
            android:layout_weight="1"
            android:gravity="center"
            android:text="+" />
    </TableRow>

    <TableRow>

        <Button
            android:layout_weight="1"
            android:gravity="center"
            android:text="4" />

        <Button
            android:layout_weight="1"
            android:gravity="center"
            android:text="5" />

        <Button
            android:layout_weight="1"
            android:gravity="center"
            android:text="6" />

        <Button
            android:layout_weight="1"
            android:gravity="center"
            android:text="-" />
    </TableRow>

    <TableRow>

        <Button
            android:layout_weight="1"
            android:gravity="center"
            android:text="7" />

        <Button
            android:layout_weight="1"
            android:gravity="center"
            android:text="8" />

        <Button
            android:layout_weight="1"
            android:gravity="center"
            android:text="9" />

        <Button
            android:layout_weight="1"
            android:gravity="center"
            android:text="×" />
    </TableRow>

    <TableRow>

        <Button
            android:layout_weight="1"
            android:gravity="center"
            android:text="0" />

        <Button
            android:layout_weight="1"
            android:gravity="center"
            android:text="." />

        <Button
            android:layout_weight="1"
            android:gravity="center"
            android:text="=" />

        <Button
            android:layout_weight="1"
            android:gravity="center"
            android:text="/" />
    </TableRow>

</TableLayout>